//question and solution link: https://leetcode.com/problems/convert-1d-array-into-2d-array/solutions/5723421/very-simple-java-solution-beginner-friendly/
//java solution
class Solution {
    public int[][] construct2DArray(int[] original, int m, int n) {
       int k=0;
       int arr[][]=new int[m][n];
       if(original.length == m*n ){
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
              arr[i][j]=original[k];
              k++;
            }

        }
        return arr;
       }
       else{
       int newarr[][]=new int[0][0];
         return newarr;
       }
       
    }
}
